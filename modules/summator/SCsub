Import('env')

# Add source files to the build
env.add_source_files(env.modules_sources, "*.cpp")

# Use a relative path for Eigen (relative to the current module directory)
eigen_path = "#modules/summator/Eigen"  # The '#' symbol makes the path relative to the Godot root directory

# Append the relative path for Eigen headers
env.Append(CPPPATH=[eigen_path])
